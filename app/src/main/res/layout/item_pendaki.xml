<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    app:cardBackgroundColor="#B31B3D3A"
    app:cardCornerRadius="12dp"
    app:cardElevation="4dp"
    android:layout_marginTop="16dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="16dp">

        <TextView
            android:id="@+id/tv_judul_anggota"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/item_pendaki_judul_prefix"
            android:textAppearance="@style/TextAppearance.Material3.TitleSmall"
            android:textColor="@android:color/white"
            android:textStyle="bold" />

        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/til_nama_pendaki"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:textColorHint="#E0E0E0"
            app:boxStrokeColor="#FFFFFF"
            android:hint="@string/item_pendaki_nama_hint">
            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/et_nama_pendaki"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:minHeight="48dp"
                android:textColor="@android:color/white"
                android:inputType="textCapWords"
                android:importantForAccessibility="no" />
        </com.google.android.material.textfield.TextInputLayout>

        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/til_nik_pendaki"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:textColorHint="#E0E0E0"
            app:boxStrokeColor="#FFFFFF"
            android:hint="@string/item_pendaki_nik_hint">
            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/et_nik_pendaki"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:minHeight="48dp"
                android:textColor="@android:color/white"
                android:inputType="number"
                android:importantForAccessibility="no" />
        </com.google.android.material.textfield.TextInputLayout>

        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/til_telepon_pendaki"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:textColorHint="#E0E0E0"
            app:boxStrokeColor="#FFFFFF"
            android:hint="@string/item_pendaki_telp_hint">
            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/et_telepon_pendaki"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:minHeight="48dp"
                android:textColor="@android:color/white"
                android:inputType="phone"
                android:importantForAccessibility="no" />
        </com.google.android.material.textfield.TextInputLayout>

        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/til_darurat_pendaki"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:textColorHint="#E0E0E0"
            app:boxStrokeColor="#FFFFFF"
            android:hint="@string/item_pendaki_darurat_hint">
            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/et_darurat_pendaki"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:minHeight="48dp"
                android:textColor="@android:color/white"
                android:inputType="text"
                android:importantForAccessibility="no" />
        </com.google.android.material.textfield.TextInputLayout>

        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/til_alamat_pendaki"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:textColorHint="#E0E0E0"
            app:boxStrokeColor="#FFFFFF"
            android:hint="@string/item_pendaki_alamat_hint">
            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/et_alamat_pendaki"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:minHeight="48dp"
                android:textColor="@android:color/white"
                android:inputType="textMultiLine"
                android:maxLines="3"
                android:importantForAccessibility="no" />
        </com.google.android.material.textfield.TextInputLayout>
        <Button
            android:id="@+id/btn_upload_surat_anggota"
            style="@style/Widget.App.Button.Outlined"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:textSize="16sp"
            android:padding="12dp"
            android:text="@string/item_pendaki_pilih_surat"
            android:textColor="#FFFFFF"
            app:strokeColor="#FFFFFF"
            app:iconTint="@android:color/white"
            app:icon="@drawable/ic_upload_file" />

        <TextView
            android:id="@+id/tv_nama_file_surat_anggota"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:text="@string/item_pendaki_file_belum_dipilih"
            android:textColor="#E0E0E0"
            android:textAlignment="center" />

    </LinearLayout>
</androidx.cardview.widget.CardView>